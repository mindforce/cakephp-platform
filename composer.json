{
    "name": "mindforce/cakephp-platform",
    "description": "Platform plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.6",
        "cakephp/cakephp": "3.7.*",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "suggest": {
        "lorenzo/cakephp-email-queue": "Allows to send emails without time gaps in queue"
    },
    "autoload": {
        "psr-4": {
            "Platform\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Platform\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
